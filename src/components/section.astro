---
interface Props {
  info: string;
}
const { info } = Astro.props;
---

<section
  class="w-full h-[600px] bg-gray-900 text-white lg:flex block shadow-2xl"
>
  <!-- sección 1 info -->
  <div class="lg:w-2/4 flex items-center justify-center p-8">
    <div class="w-full max-w-md">
      <h1 class="text-5xl font-bold mb-4">
        I'm <strong class="text-yellow-400">Yahir</strong>
      </h1>
      <h3 class="text-lg mb-6">{info}</h3>
      <div class="mt-3">
        <button
          class="border border-yellow-400 rounded-md font-bold text-xl text-yellow-400 p-3 transition duration-300 ease-in-out transform hover:bg-yellow-400 hover:text-white hover:scale-105"
        >
          Contact Me
        </button>
      </div>
    </div>
  </div>
  <!-- sección 2 imagen -->
  <div class="lg:w-2/4 flex items-center justify-center p-5">
    <img
      class="rounded-lg shadow-md transform transition-all duration-300 ease-in-out hover:scale-105"
      src="dev.jpg"
      alt="Yahir Developer"
    />
  </div>
</section>
